<% include ../partials/header %>

    <div class="container-fluid">
        <div class="row">
            <h1 class="text-center">
                Comment info
            </h1> 
        </div>
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-8">
                <table class="table table-bordered">
                    <tr>
                        <th class="text-right col-md-1"><strong> User:  </strong></th> 
                        <td><%= comment.user.username %></td> 
                    </tr>
                    <tr>
                        <td class="text-right"><strong>Content:</strong></td>
                        <td><%= comment.content %></td>
                    </tr>
                </table>
                <div class="row">
                    <div class="col-md-6">
                        <form action="/comments/<%= comment.id %>/edit" method="GET">
                            <button type="submit" class="btn btn-warning form-control">
                                <span class="glyphicon glyphicon-edit"></span> Edit this comment
                            </button>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <form action="/comments/<%= comment.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger form-control">
                                <span class="glyphicon glyphicon-trash"></span> Delete
                            </button>
                        </form>
                    </div>

                </div>
            </div>
            <div class="col-md-2">

            </div>
        </div>
    </div>
<% include ../partials/footer %>